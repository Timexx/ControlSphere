# Database Configuration
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret - REQUIRED FOR SECURITY
# Generate a strong secret with: openssl rand -base64 64
# MUST be at least 32 characters long
# DO NOT use default or weak secrets in production
JWT_SECRET=

# Secure Remote Terminal Service Configuration
# SESSION_TOKEN_SECRET: 32-byte hex string for HMAC signing of session tokens
# Generate with: openssl rand -hex 32
# REQUIRED - Do not use default in production
SESSION_TOKEN_SECRET=

# Session expiry in seconds (default: 300 = 5 minutes)
SESSION_EXPIRY_SECONDS=300

# Rate limiting: tokens per second (default: 100)
RATE_LIMIT_TOKENS_PER_SEC=100

# Rate limiting: burst allowance (default: 20)
RATE_LIMIT_BURST_TOKENS=20

# Clock skew tolerance in seconds (default: 60)
CLOCK_SKEW_TOLERANCE_SECONDS=60

# Nonce history limit per machine (default: 10000)
NONCE_HISTORY_LIMIT=10000

# Node Environment
NODE_ENV=development
